<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyleSetting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/leader_frame_size"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/RankLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/profile"
        android:text="Hello" />

    <TextView
        android:id="@+id/UserLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RankLeader"
        android:layout_alignStart="@+id/RankLeader"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textColor="#EE5F02" />

    <TextView
        android:id="@+id/numberLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statLeader"
        android:layout_alignStart="@+id/statLeader"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textColor="#EE5F02"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/statLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="@dimen/leader_frame_size"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/numberLeader"
        android:background="#EE5F02" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#EE5F02"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>