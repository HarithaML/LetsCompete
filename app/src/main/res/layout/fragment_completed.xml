<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp"
    tools:context=".fragments.CompletedFragement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_completed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="this is completed challenge title"
            android:textColor="@color/colorSecondary"
            android:textSize="24sp" />
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/card_completed_description"
            android:layout_width="382dp"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:text="this is completed challenge description and it might be very longggggggggggggggggggggggggggggggggggggggggg"
            android:textColor="@color/colorSecondary"
            android:textSize="14sp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>